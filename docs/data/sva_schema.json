{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elexon.co.uk/bsc/smart/sva-data-catalogue-vol2/v52.0",
  "title": "SVA Data Catalogue Volume 2: Data Items",
  "description": "Machine-readable representation of the SVA Data Catalogue Volume 2 V52.0. Covers 420 data item definitions from Appendix C, with data flow mappings from Appendix B and NETA IDD cross-references.",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object"
    },
    "acronyms": {
      "type": "object"
    },
    "data_items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item_name": {
            "type": "string"
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "units": {
            "type": [
              "string",
              "null"
            ]
          },
          "valid_set": {
            "type": [
              "string",
              "null"
            ]
          },
          "domain": {
            "type": [
              "string",
              "null"
            ],
            "enum": [
              "Text",
              "Real",
              "Integer",
              "Date",
              "DateTime",
              "Boolean",
              "See Synonym",
              null
            ]
          },
          "logical_format": {
            "type": [
              "string",
              "null"
            ]
          },
          "default_value": {
            "type": [
              "string",
              "null"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          },
          "is_synonym_of": {
            "type": [
              "string",
              "null"
            ]
          },
          "neta_idd_reference": {
            "type": [
              "string",
              "null"
            ],
            "pattern": "^N\\d{4}$"
          },
          "neta_idd_full_type": {
            "type": [
              "string",
              "null"
            ]
          },
          "data_flow_count": {
            "type": [
              "integer",
              "null"
            ],
            "description": "Number of SVA data flows that carry this item (from Appendix B)"
          },
          "smart_classification": {
            "type": "object",
            "properties": {
              "semantic_type": {
                "type": [
                  "string",
                  "null"
                ],
                "enum": [
                  "identifier",
                  "measurement",
                  "financial",
                  "temporal",
                  "descriptive",
                  "configuration",
                  "metering_technical",
                  "unclassified",
                  null
                ]
              },
              "is_computable": {
                "type": [
                  "boolean",
                  "null"
                ]
              },
              "bsc_section_references": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "ontology_candidate": {
                "type": "boolean"
              },
              "related_items": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": [
          "item_name"
        ]
      }
    }
  }
}