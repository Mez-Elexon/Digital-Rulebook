{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elexon.co.uk/bsc/smart/bmrs-data-catalogue/v5.0",
  "title": "BMRS Data Catalogue",
  "description": "Machine-readable representation of the BMRS Data Catalogue V5.0. Covers reporting requirements (Tables 1-6), calculated data items, functional requirements, and validation rules.",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object"
    },
    "acronyms": {
      "type": "object"
    },
    "functional_requirements": {
      "type": "object",
      "description": "Functional requirements from Section 2: validation, format, retention, default rules",
      "properties": {
        "validation": {
          "type": "object",
          "properties": {
            "clause": {
              "type": "string"
            },
            "rules": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "rule_id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "is_computable": {
                    "type": "boolean"
                  },
                  "semantic_type": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "calculated_data_items": {
      "type": "array",
      "description": "Data items calculated by the BMRA per BSC Section T",
      "items": {
        "type": "object",
        "properties": {
          "calculation_code": {
            "type": "string"
          },
          "expansion": {
            "type": "string"
          },
          "bsc_section": {
            "type": "string"
          },
          "is_indicative": {
            "type": "boolean"
          },
          "ontology_candidate": {
            "type": "boolean"
          }
        }
      }
    },
    "reporting_items": {
      "type": "array",
      "description": "Reporting requirements from Tables 1-6",
      "items": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string",
            "pattern": "^BMRS-T[1-6]-\\d{3}$"
          },
          "data_description": {
            "type": "string"
          },
          "frequency": {
            "type": "string"
          },
          "format": {
            "type": "string"
          },
          "default": {
            "type": [
              "string",
              "null"
            ]
          },
          "bmrs_code": {
            "type": [
              "string",
              "null"
            ]
          },
          "table": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6
          },
          "temporal_scope": {
            "type": [
              "string",
              "null"
            ]
          },
          "granularity": {
            "type": [
              "string",
              "null"
            ]
          },
          "smart_classification": {
            "type": "object",
            "properties": {
              "semantic_type": {
                "type": "string",
                "enum": [
                  "measurement",
                  "financial",
                  "forecast",
                  "operational",
                  "operational_event",
                  "reference_data",
                  "transparency",
                  "regulatory",
                  "unclassified"
                ]
              },
              "is_computable": {
                "type": [
                  "boolean",
                  "null"
                ]
              },
              "data_provider": {
                "type": "string"
              },
              "bsc_section_references": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "ontology_candidate": {
                "type": "boolean"
              },
              "related_bmrs_codes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": [
          "item_id",
          "data_description",
          "frequency",
          "format",
          "table"
        ]
      }
    }
  }
}
